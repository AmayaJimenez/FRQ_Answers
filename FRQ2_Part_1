import java.util.Scanner;

public class FRQ2 {
	
		public static void main(String args []) {
		  double hourlyWage;
		  double totalRegularHours;
		  double totalOvertimeHours;
		  double totalWeeklyPay;
		  double overtimeWage;
		  
		  Scanner hwReader = new Scanner(System.in);
		  System.out.println("Enter the hourly wage: ");
		  hourlyWage = hwReader.nextDouble();
		  
		  Scanner ohReader = new Scanner(System.in);
		  System.out.println("Enter the overime hours: ");
		  totalOvertimeHours = ohReader.nextDouble();
		  
		 Scanner rhReader = new Scanner(System.in);
		  System.out.println("Enter the total regular hours: ");
		  totalRegularHours = rhReader.nextDouble();
		  
		  overtimeWage = totalOvertimeHours * (1.5 * hourlyWage);
		  totalWeeklyPay = ((hourlyWage * totalRegularHours) + overtimeWage);
		  
		  System.out.println("The employee's total weekly pay is " + totalWeeklyPay);
		 
	}
	}
